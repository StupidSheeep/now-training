<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 mx-auto border p-4"> <!-- borderとp-4クラスを追加 -->
      <h2 class="text-center">ログイン</h2>

      <%= form_with model: @user, url: new_user_session_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :メール %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.label :自動ログイン %>
            <%= f.check_box :remember_me %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>

        <div class="form-group">
          <%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
        </div>
      <% end %>

    </div>
  </div>
</div>