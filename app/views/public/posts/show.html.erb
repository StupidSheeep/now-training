<h2>トレーニング内容</h2>
<div class="container">
  <div class="row">
    <div>
      <label>タイトル</label>
      <%= @post.title %>
    </div>
    <div>
      <label>目標時間</label>
      <%= @post.target_time %>
    </div>
    <div>
      <label>難易度</label>
      <%= @genre.name %>
    </div>
    <div>
      <label>内容</label>
      <%= @post.body %>
    </div>
    <div>
      <label>投稿日</label>
      <%= @post.created_at.strftime('%Y年%m月%d日') %>
    </div>
  </div>
  <div class="row">
    
    
  </div>
</div>