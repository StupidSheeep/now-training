<h2>トレーニング内容の編集</h2>
<div class="container">
  <%= form_with model: @post, local: true do |form| %>
    <div class="row">
      <div>
        <%= form.label :タイトル %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
      <div>
        <%= form.label :目標時間 %>
        <%= form.number_field :target_time, class: "form-control" %>
      </div>
      <div>
        <%= form.label :難易度 %>
        <%= form.collection_select :genre_id, Genre.all, :id, :name, { prompt: "選択してください" }, class: "form-control" %>
      </div>
      <div>
        <%= form.label :内容 %>
        <%= form.text_area :body, class: "form-control" %>
      </div>
    </div>

    <div class="actions">
      <%= form.submit "更新", class: "btn btn-primary" %>
      <%= link_to "戻る", post_path(@post), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>