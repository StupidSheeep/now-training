<div class="container">
  <h2 class="text-center mt-3">内容の編集</h2>
  <div class="container mt-4">

    <%= form_with model: @post, local: true do |f| %>
      <div class="form-group">
        <%= f.label :タイトル %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group row">
        <div class="col">
          <%= f.label :目標時間 %>
          <%= f.number_field :target_time, class: "form-control" %>
        </div>
        <div class="col">
          <%= f.label :難易度 %>
          <%= f.select :level, options_for_select(["ビギナー", "スタンダード", "プロフェッショナル"], selected: @post.level), { prompt: "レベルを選択してください" }, class: "form-control" %>
        </div>
        <div class="col">
          <%= f.label :ジャンル %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: "ジャンルを選択してください" }, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :内容 %>
        <%= f.text_area :body, class: "form-control", rows:'10' %>
      </div>
      <div class="form-group">
        <%= f.submit @post.new_record? ? '投稿' : '更新', class: "btn btn-success" %>
        <%= link_to "戻る", @post, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
