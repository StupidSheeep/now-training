<div class="container mt-4">
  <div class="row">
    <div class="col-md-4 mx-auto border p-4"> <!-- borderとp-4クラスを追加 -->
      <h2 class="text-center">新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="field mb-2">
          <%= f.label :ニックネーム %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", :placeholder => "1~14文字", class: "form-control", style: "width: 200px;" %>
        </div>

        <div class="field mb-2">
          <%= f.label :メール %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "width: 200px;" %>
        </div>

        <div class="field mb-2">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
            (<%= @minimum_password_length %>文字以上入力してください)
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", style: "width: 200px;" %>
        </div>

        <div class="field mb-2">
          <%= f.label :パスワード確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", style: "width: 200px;" %>
        </div>

        <div class="actions mt-3">
          <%= f.submit "新規登録", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
