<h2 class="mb-4">ジャンル追加</h2>
<div class="mt-5 mb-5">
  <%= render "public/shared/error_messages", resource: @genre %>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <div class="mb-3">
      <%= f.label :ジャンル名, class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <%= f.submit '追加', class: 'btn btn-primary' %>
  <% end %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>トレーニングジャンル</th>
      <th>操作</th>
    </tr>
  </thead>
</table>

<div style="max-height: 300px; overflow: auto;">
  <table class="table">
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td>
            <%= link_to '削除', admin_genre_path(genre), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>