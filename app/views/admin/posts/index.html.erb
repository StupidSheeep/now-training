<h1 class = "text-center mt-5 mb-5">みんなの投稿</h1>
<div class = "container">
  <div class = "row">

    <% @posts.each do |post| %>
      <div class="col-2">
        <%= image_tag post.user.profile_image, class: "rounded rounded-circle user-avatar", size:"145x145" %>
      </div>
      <div class="col-10">
        <h3><%= post.title %></h3>
        <div class="col-8">
          <div class="row">
            <div class="col-4">
              目標時間：<%= post.target_time %> 分
            </div>
            <div class="col-5">
              トレーニングジャンル：<%= post.genre.name %>
            </div>
            <div class="col-3">
              難易度：<%= post.level %>
            </div>
          </div>
        </div>
        <div class="col-8">
          <div class="row">
            <div class="col-6">
              コメント数: <%= post.comments.count %>
            </div>
            <div class="col-6">
              ブックマーク数: <%= post.bookmarks.count %>
            </div>
          </div>
        </div>
        <%= link_to "内容を見る", admin_post_path(post), class: "btn btn-primary" %>
      </div>
      <div class="col-12 pb-5">
        <%= post.user.name %>
      </div>
    <% end %>


  </div>
</div>