<h1 class = "text-center mt-5 mb-5">みんなの投稿</h1>
<div class = "container">
  <div class = "row">

    <% @posts.each do |post| %>
      <div class="col-2">
        <%= image_tag post.user.get_profile_image(100, 100), class: "user-avatar" %>
      </div>
      <div class="col-10">
        <h3><%= post.title %></h3>
        <div class="col-8">
          <div class="row">
            <div class="col-6">
              目標時間：<%= post.target_time %> 分
            </div>
            <div class="col-6">
              難易度：<%= post.genre.name %>
            </div>
          </div>
        </div>
        <div class="col-8">
          <div class="row">
            <div class="col-6">
              コメント数: <%= post.comments.count %>
            </div>
            <div class="col-6">
              ブックマーク数: <%= post.bookmarks.count %>
            </div>
          </div>
        </div>
        <% if current_user %>
          <% if current_user.bookmarks.exists?(post_id: post.id) %>
            <%= link_to "ブックマークを外す", post_bookmarks_path(post, current_user.bookmarks.find_by(post: post)), method: :delete %>
          <% else %>
            <%= link_to "ブックマーク", post_bookmarks_path(post), method: :post %>
          <% end %>
        <% end %>
        <%= link_to "内容を見る", post_path(post), class: "btn btn-primary" %>
      </div>
      <div class="col-12 pb-5">
        <%= post.user.name %>
      </div>
    <% end %>


  </div>
</div>